<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:id="@+id/content_frag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:background="#c7c7c7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.zaaach.tabradiobutton.TabRadioButton
                android:id="@+id/home_frag"
                android:text="首页"
                android:drawableTop="@drawable/tab_home_icon_selector"
                style="@style/footer_radioButton_style" />

            <com.zaaach.tabradiobutton.TabRadioButton
                android:id="@+id/timeline_frag"
                android:text="时间轴"
                style="@style/footer_radioButton_style" />

            <com.zaaach.tabradiobutton.TabRadioButton
                android:id="@+id/setting_frag"
                android:text="设置"
                style="@style/footer_radioButton_style" />
        </RadioGroup>

    </LinearLayout>


</RelativeLayout>